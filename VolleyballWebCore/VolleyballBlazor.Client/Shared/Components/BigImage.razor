@if(Image != null)
{
    <img src="@ImageBase64" alt="Image" class="img-fluid img-thumbnail" style="max-height:40vh"/>
}

@code {
    [Parameter]
    public byte[]? Image { get; set; }
    
    public string ImageBase64
    {
        get
        {
            if (Image != null)
            {
                return "data:image/png;base64, " + Convert.ToBase64String(Image);
            }
            else
            {
                return "";
            }
        }
    }
}
