@page "/"
@inject IDiscussionService discussionService

<section class="section">
    <div class="container">
        <div class="row">

            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12 mt-2">
                @if (ArticlesLoading)
                {
                    <LoadingIcon />
                }
                else
                {
                    @if (ArticlesError == "")
                    {

                        <div class="page-wrapper">
                            <div class="blog-top clearfix">
                                <h4 class="pull-left">Aktualności</h4>
                            </div><!-- end blog-top -->

                            <div class="blog-list clearfix">
                                @foreach (var Article in Articles)
                                {
                                    <ArticlePreview Article="Article" />
                                    <hr class="invis">
                                }
                            </div>

                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <b>Błąd wczytywania artykułów:</b> @ArticlesError
                        </div>
                    }
                }
            </div>


            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                <div class="sidebar">
                    <div class="widget">
                        <h3 class="widget-title">Aktywność</h3>
                        @foreach (var PersonalLog in personalLogs)
                        {
                            <div>
                                <small>@PersonalLog.Date</small>
                                @if (PersonalLog.Link != null)
                                {
                                    <p><NavLink href="@PersonalLog.Link">@PersonalLog.Description</NavLink></p>
                                }
                                else
                                {
                                    <p>@PersonalLog.Description</p>
                                }
                            </div>

                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@code {
    public List<ArticleDto> Articles { get; set; } = new List<ArticleDto>();

    public string ArticlesError { get; set; } = "";

    public bool ArticlesLoading { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        ArticlesLoading = true;
        var articlesResponse = await discussionService.GetAllArticles();

        if (articlesResponse.Success)
        {
            Articles = articlesResponse.Data!;
        }
        else
        {
            ArticlesError = articlesResponse.Message;
        }
        ArticlesLoading = false;

    }
    PersonalLogDto[] personalLogs = new PersonalLogDto[]
    {
        new PersonalLogDto { Id = 1, Description = "Content", Date = DateTime.Now, User = new User { FirstName = "John", LastName = "Doe" }, Link = "wp.pl" },
        new PersonalLogDto { Id = 2, Description = "Content", Date = DateTime.Now, User = new User { FirstName = "John", LastName = "Doe" }, Link = "wp.pl" },
        new PersonalLogDto { Id = 3, Description = "Content", Date = DateTime.Now, User = new User { FirstName = "John", LastName = "Doe" }, Link = "wp.pl" }
    };
}